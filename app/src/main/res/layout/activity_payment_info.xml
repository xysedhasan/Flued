<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/parent"
    android:padding="15dp"
    tools:context=".PaymentInfoActivity">


    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/lightgreen"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardlayers"
            android:padding="20dp"
            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/mastercard"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/delete"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_delete"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:id="@+id/edit"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@+id/delete"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_pen"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4332 2343 1234 4543"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/montserratmedium"
                android:textSize="28dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02-11-21 08:25"
                android:layout_alignParentBottom="true"
                android:textSize="18dp"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/white"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nick White"
                android:fontFamily="@font/montserratmedium"
                android:layout_alignParentBottom="true"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"

                />

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/addcad"
        android:layout_below="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:src="@drawable/addcard"
     />
</RelativeLayout>